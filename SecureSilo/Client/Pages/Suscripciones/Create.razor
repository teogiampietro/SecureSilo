@page "/suscripcion/{UserId}/nuevo-pago"
@inject HttpClient Http
@inject NavigationManager NavManager
<div class="container">
    <br />
    <h3 class="text-center">Enviar nueva solicitud de pago</h3>
    <FormularioPagos TextoBoton="Confirmar" OnValidSubmit="@NuevaSuscripcion" suscripcion="@suscripcion" />
</div>
@code {
    [Parameter] public string UserId { get; set; }
    Suscripcion suscripcion = new Suscripcion();
    async Task NuevaSuscripcion()
    {
        suscripcion.UserId = UserId;
        await Http.PostAsJsonAsync("Suscripcion", suscripcion);
        NavManager.NavigateTo($"/suscripcion/{UserId}/gestionar");
    }

}
